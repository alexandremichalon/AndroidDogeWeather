<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutDoge"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_01d"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".ActivityDogeWeather" >

    <TextView
        android:id="@+id/TextTemperatureCelcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImgFrontDoge"
        android:layout_alignLeft="@+id/ImgFrontDoge"
        android:ems="10"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/TextTemperatureFahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextTemperatureCelcius"
        android:layout_alignBottom="@+id/TextTemperatureCelcius"
        android:layout_alignRight="@+id/ImgFrontDoge"
        android:ems="10"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/TextCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextTemperatureCelcius"
        android:layout_alignLeft="@+id/ImgFrontDoge"
        android:layout_alignRight="@+id/ImgFrontDoge"
        android:ems="10"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/TextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextCity"
        android:layout_alignLeft="@+id/ImgFrontDoge"
        android:layout_alignRight="@+id/ImgFrontDoge"
        android:ems="10"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/ButtonUseLocation"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="0.85"
        android:drawableLeft="@drawable/doge_geo"
        android:text="@string/use_my_location"
        android:textSize="@dimen/text_size" />

    <ImageView
        android:id="@+id/ImgFrontDoge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/front_doge_regular"
        tools:ignore="ContentDescription" />

</RelativeLayout>
